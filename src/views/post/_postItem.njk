<article class="gap-2 md:max-w-[25vw]">
  <div class="flex-row justify-between items-center gap-2">
    <a class="flex-row items-center gap-2" href="/@{{post.user.username}}">
      <img 
        width="32"
        height="32"
        class="rounded-full hover:grayscale-[15%]"
        src="{{imageServer}}/w_96,h_96,c_fill,g_face/v1675078381/{{post.user.picture}}"></img>
      <h2 class="text-lg overflow-hidden whitespace-nowrap">{{post.user.name}}</h2>
    </a>
    <span class="text-sm">{{post.createdAt.toLocaleDateString()}}</span>
  </div>
  <a href="/post/{{post.id}}" class='gap-1'>
    <picture class="relative group">
      <img
        class="w-full md:rounded-lg bg-gray-200 md:object-cover" 
        src="{{imageServer}}/w_512/v1675078381/{{post.image}}"></img>
      <div class="opacity-0 group-hover:opacity-100 transition-all duration-100 absolute bottom-0 right-0 text-white bg-black/50 p-4 text-lg rounded-tl-lg rounded-br-lg">Visualizar post</div>
    </picture>
    <div class="px-2 md:px-0 gap-2">
      <div>{{post.description}}</div>
    </div>
  </a>
</article>